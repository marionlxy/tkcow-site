    .container {
      margin: 0 auto;
	  width:564px;
	  height:174px;
	  white-space:nowrap;
    }

    /* For tablets & smart phones */
    @media (max-width: 767px) {
      body {
        padding-left: 20px;
        padding-right: 20px;
      }
      .container {
        width:auto;
		height:auto;
      }
    }

    /* For smartphones */
    @media (max-width: 480px) {
      .container {
        width:auto;
		height:auto;
      }
    }

    /* For smaller displays like laptops */
    @media (min-width: 768px) and (max-width: 979px) {
      .container {
        width:564px;
	  	height:174px;
      }
    }

    /* For larger displays */
    @media (min-width: 1200px) {
      .container {
        width:564px;
		height:174px;
      }
    }